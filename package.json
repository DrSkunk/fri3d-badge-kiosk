{
  "name": "fri3d-badge-kiosk",
  "version": "1.1.0",
  "main": "electron/main.cjs",
  "type": "module",
  "author": "Sebastiaan Jansen",
  "description": "Desktop application to restore the firmware of several Fri3d camp boards",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron electron/main.cjs\"",
    "build:gui": "vite build",
    "build:electron": "electron-builder --windows portable --x64 && electron-builder --linux AppImage --x64 && electron-builder --mac dmg --x64 && electron-builder  --mac dmg --arm64",
    "build": "npm run build:gui && npm run build:electron"
  },
  "license": "MIT",
  "build": {
    "appId": "be.fri3d.badgefixer",
    "productName": "Fri3d Badge Fixer",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "electron/**/*"
    ],
    "extraResources": [
      "build-gui/**/*",
      "build-resources/**/*"
    ],
    "artifactName": "fri3d-badge-fixer-${os}-${arch}-${version}.${ext}",
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "devDependencies": {
    "@types/dom-serial": "^1.0.6",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.40",
    "serialport": "^12.0.0",
    "tailwindcss": "^3.4.7",
    "vite": "^5.3.5"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.2",
    "command-exists": "^1.2.9",
    "electron-serve": "^1.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
